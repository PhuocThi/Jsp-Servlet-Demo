<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" version="4.0">
  <display-name>ProductManagement</display-name>
  <welcome-file-list>
    <welcome-file>ProductController</welcome-file>
  </welcome-file-list>
  
  <servlet>
  	<servlet-name>ProductController</servlet-name>
  	<servlet-class>com.thi.demo.controller.ProductController</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>ProductController</servlet-name>
  	<url-pattern>/product</url-pattern>
  </servlet-mapping>
  
  <context-param>
  	<param-name>dbURL</param-name>
  	<param-value>jdbc:mysql://localhost:3306/ProductManagement</param-value>
  </context-param>
  
  <context-param>
  	<param-name>dbUsername</param-name>
  	<param-value>root</param-value>
  </context-param>
  
  <context-param>
  	<param-name>dbPassword</param-name>
  	<param-value>ngu123456,</param-value>
  </context-param>
  
</web-app>